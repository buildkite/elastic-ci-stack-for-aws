#!/bin/bash

set -eu -o pipefail

if [[ -n "${SECRETS_PLUGIN_ENABLED:-1}" ]] ; then
  # shellcheck source=/dev/null
  source /usr/local/buildkite-aws-stack/plugins/secrets/hooks/pre-command.sh
fi

if [[ -n "${AWS_ECR_LOGIN:-}" && -n "${ECR_PLUGIN_ENABLED:-1}" ]] ; then
  export BUILDKITE_PLUGIN_ECR_LOGIN=1

  # shellcheck source=/dev/null
  source /usr/local/buildkite-aws-stack/plugins/ecr/hooks/pre-command
fi

if [[ -n "${BUILDKITE_SECRETS_BUCKET:-}" &&  -n "${SECRETS_PLUGIN_ENABLED:-1}" ]] ; then
  export BUILDKITE_PLUGIN_S3_SECRETS_BUCKET="$BUILDKITE_SECRETS_BUCKET"

  # shellcheck source=/dev/null
  source /usr/local/buildkite-aws-stack/plugins/secrets/hooks/pre-command
fi


# DOCKER_HUB_* legacy config var support
if [[ -n "${DOCKER_HUB_USER:-}" && -n "${DOCKER_HUB_PASSWORD:-}" ]]; then
  echo "~~~ :warning: Deprecated DOCKER_HUB_* env variables"
  echo "The following env hook environments variables need updating:"
  echo "* DOCKER_HUB_USER is now DOCKER_LOGIN_USER"
  echo "* DOCKER_HUB_PASSWORD is now DOCKER_LOGIN_PASSWORD"
  DOCKER_LOGIN_USER="${DOCKER_HUB_USER}"
  DOCKER_LOGIN_PASSWORD="${DOCKER_HUB_PASSWORD}"
fi

if [[ -n "${DOCKER_LOGIN_USER:-}" && -n "${DOCKER_LOGIN_PLUGIN_ENABLED:-1}" ]] ; then
  export BUILDKITE_PLUGIN_DOCKER_LOGIN_USERNAME="$DOCKER_LOGIN_USER"
  export BUILDKITE_PLUGIN_DOCKER_LOGIN_PASSWORD="$DOCKER_LOGIN_PASSWORD"
  export BUILDKITE_PLUGIN_DOCKER_LOGIN_SERVER="${DOCKER_LOGIN_SERVER:-}"

  # shellcheck source=/dev/null
  source /usr/local/buildkite-aws-stack/plugins/docker-login/hooks/pre-command
fi
